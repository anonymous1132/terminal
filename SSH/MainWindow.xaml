<Window x:Class="npcook.Ssh.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:npcook.Ssh"
        xmlns:term="clr-namespace:npcook.Terminal.Controls;assembly=npcook.Terminal.Controls"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight" FocusManager.FocusedElement="{Binding ElementName=terminalControl}" GotKeyboardFocus="OnKeyboardFocus">
    <StackPanel Orientation="Vertical">
        <ToolBar x:Name="toolBar">
            <Button Content="Connect" Height="22" VerticalAlignment="Top" Width="75" Click="connect_click"/>
        </ToolBar>
        <term:TerminalControl x:Name="terminalControl" FontFamily="Consolas" Focusable="True" FocusVisualStyle="{x:Null}" FontSize="13" Background="Black" Width="400" Height="200">
        </term:TerminalControl>
    </StackPanel>
</Window>
